                  <div class="control-group">
                    <label class="control-label" for="confirmsignup"></label>
                    <div class="controls text-center">
                      <button
                        id="confirmsignup"
                        name="confirmsignup"
                        class="btn orange"
                      >
                        Sign Up
                      </button>
                    </div>
                  </div>
                </fieldset>
              </form>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <center>
