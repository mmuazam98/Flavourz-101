<%- include("partials/header") %>
<section id="confirm">
  <main>
    <div class="basket">
      <div class="basket-module">
        <label for="promo-code" class="font-weight-bold"
          >Have a promo code?</label
        >
        <input
          id="promo-code"
          type="text"
          name="promo-code"
          maxlength="15"
          class="promo-code-field"
          placeholder="Enter coupon code"
        />
        <button class="promo-code-cta">Apply</button>
      </div>
      <div class="basket-labels">
        <ul>
          <li class="item item-heading">Item</li>
          <li class="price">Price</li>
          <li class="quantity">Quantity</li>
          <li class="subtotal">Subtotal</li>
        </ul>
      </div>
      <div class="basket-product">
        <div class="item">
          <div class="product-image">
            <img
              src="images/food-1.jpg"
              alt="Placholder Image 2"
              class="product-frame"
            />
          </div>
          <div class="product-details">
            <h1>
              <strong
                ><span class="item-quantity">1 x</span> ProductName</strong
              >
            </h1>
            <p>
              <strong><a href="#">ShopName</a></strong>
            </p>
            <p><strong>Product Code</strong> - 232321939</p>
          </div>
        </div>
        <div class="price">60.00</div>
        <div class="quantity">
          <input
            type="number"
            value="1"
            min="1"
            class="quantity-field"
            disabled
          />
        </div>
        <div class="subtotal">60.00</div>
        <div class="remove">
          <button>Remove <i class="fas fa-trash-alt"></i></button>
        </div>
      </div>
    </div>
    <aside>
      <div class="summary">
        <div class="summary-total-items">
          <span class="total-items"></span> Item(s) in your Cart
        </div>
        <div class="summary-subtotal">
          <div class="subtotal-title">Subtotal</div>
          <div class="subtotal-value final-value" id="basket-subtotal">
            60.00
          </div>
          <div class="summary-promo hide">
            <div class="promo-title">Discount</div>
            <div class="promo-value final-value" id="basket-promo"></div>
          </div>
        </div>
        <div class="summary-delivery">
          <select name="delivery-collection" class="summary-delivery-selection">
            <option value="0" selected="selected">
              Select Collection or Delivery
            </option>
            <option value="collection">Collection</option>
            <option value="delivery" disabled>Delivery (Coming Soon)</option>
          </select>
        </div>
        <div class="summary-total">
          <div class="total-title">Total</div>
          <div class="total-value final-value" id="basket-total">60.00</div>
        </div>
        <div class="summary-checkout">
          <button class="checkout-cta">Confirm Order</button>
        </div>
      </div>
    </aside>
  </main>
</section>
<%- include("partials/footer") %>
